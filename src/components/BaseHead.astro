---
export interface Props {
	title: string;
	description: string;
	fixPathname?: string;
}

import 'sanitize.css';
import 'sanitize.css/typography.css';

import { getPermalink } from '$/lib/getPermalink';

const { title, description, fixPathname } = Astro.props;
const permalink = getPermalink(Astro.canonicalURL, fixPathname);

---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="/styles/fonts.css" />
<link rel="stylesheet" href="/styles/fonts-italic.css" />
<link rel="stylesheet" href="/styles/ff9homm3.css" />
<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="canonical" href={permalink} />
{fixPathname &&
<script is:inline>
	history.replaceState(null, undefined, document.querySelector('[rel="canonical"]').getAttribute('href'))
</script>}
{fixPathname && <noscript>
	<meta http-equiv="refresh" content={`0;url=${fixPathname}`} />
</noscript>}
<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={permalink} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content="/assets/social.jpg?v=1" />
<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={permalink} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content="/assets/social.jpg?v=1" />
<!-- FavIcon -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#be960a" />
<meta name="apple-mobile-web-app-title" content="Merri.net" />
<meta name="application-name" content="Merri.net" />
<meta name="msapplication-TileColor" content="#da532c" />
<meta name="theme-color" content="#ffffff" />
