<!-- Yes this is far more backwards compatible than the modern web needs -->
<script is:inline>
	!function () {
		var hasLS = !function (l) { try { (l = localStorage).removeItem(l._ = '_') } catch (e) { return 1 } }()
		var noSound = hasLS ? localStorage.noSound != null : false
		function updateSound() {
			document.documentElement.setAttribute('data-sound', noSound ? 'false' : 'true')
			if (hasLS) {
				if (noSound) localStorage.noSound = ''
				else localStorage.removeItem('noSound')
			}
		}
		updateSound()
		var equip = document.getElementById('sfx-equip')
		var select = document.getElementById('sfx-select')
		var soundOn = document.querySelector('#toggle-volume-on a')
		var soundOff = document.querySelector('#toggle-volume-off a')
		var sfx = {
			equip: [equip, equip.cloneNode(true), equip.cloneNode(true), equip.cloneNode(true), equip.cloneNode(true)],
			select: [select, select.cloneNode(true), select.cloneNode(true), select.cloneNode(true), select.cloneNode(true), select.cloneNode(true), select.cloneNode(true)]
		}
		function focusIn(event) {
			if (event.defaultPrevented || noSound) return
			var link = event.target
			while (link && link.nodeName !== 'A') { link = link.parentNode }
			if (!link) return
			sfx.select[0].play()
			sfx.select.push(sfx.select.shift())
		}
		function mouseOver(event) {
			if (event.defaultPrevented || noSound) return
			var link = event.target
			while (link && link.nodeName !== 'A') { link = link.parentNode }
			if (!link || document.activeElement === link) return
			if (document.activeElement.nodeName === 'A') document.activeElement.blur()
			var timeout = setTimeout(() => {
				delete link.onmouseout
				sfx.select[0].play()
				sfx.select.push(sfx.select.shift())
			}, 35)
			link.onmouseout = () => {
				delete link.onmouseout
				clearTimeout(timeout)
			}
		}
		document.body.addEventListener('click', function (event) {
			if (event.defaultPrevented || noSound) return
			var link = event.target
			while (link && link.nodeName !== 'A') { link = link.parentNode }
			if (!link) return
			if (link.getAttribute('href').slice(0, 1) !== '#') {
				event.preventDefault()
				const go = () => { location = link.href }
				sfx.equip[0].onended = go
				setTimeout(go, 400)
				const preload = document.createElement('link')
				preload.rel = 'prefetch'
				preload.href = link.href
				document.head.appendChild(preload)
			}
			sfx.equip[0].play()
			sfx.equip.push(sfx.equip.shift())
		})
		document.body.addEventListener('focusin', focusIn)
		document.body.addEventListener('mouseover', mouseOver)
		if (soundOn) soundOn.onclick = function (event) {
			noSound = false
			updateSound()
			event.preventDefault()
		}
		if (soundOff) soundOff.onclick = function (event) {
			noSound = true
			updateSound()
			event.preventDefault()
		}
	}()
</script>
<!-- Centered pixel font hack: fight against blurry pixel fonts  -->
<script is:inline>
	!function () {
		const html = document.documentElement
		const resizeObserver = new ResizeObserver(entries => {
			for (let entry of entries) {
				// Firefox implements `contentBoxSize` as a single content rect, rather than an array
				const width = entry.contentBoxSize ? [].concat(entry.contentBoxSize)[0].inlineSize : entry.contentRect.width
				if (width & 1) {
					document.body.style.paddingRight = '1px'
				} else {
					document.body.style.paddingRight = ''
				}
			}
		});
		resizeObserver.observe(html)
	}()
</script>
